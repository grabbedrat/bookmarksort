{
  "manifest_version": 2,
  "name": "Bookmark Sorting Extension",
  "version": "1.0",
  "description": "Intelligently sorts and organizes your bookmarks using machine learning techniques.",
  "permissions": ["bookmarks"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "pyodide/*"
  ],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"
}